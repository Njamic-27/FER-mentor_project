{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug create_geometries.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/scripts/python/create_geometries.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--src-file", "${input:srcFile}",
                "--out-geom-dir", "${input:outGeomDir}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "srcFile",
            "type": "promptString",
            "description": "Path to input OSM / PBF file",
            "default": "/path/to/input.osm.pbf"
        },
        {
            "id": "outGeomDir",
            "type": "promptString",
            "description": "Output directory for GeoParquet files",
            "default": "/path/to/output"
        }
    ]
}
